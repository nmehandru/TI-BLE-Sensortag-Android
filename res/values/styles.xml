<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Black">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="aboutStyle">
        <item name="android:background">@android:color/black</item>
        <item name="android:textColor">#ff0</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="toastStyle">
        <item name="android:background">@android:color/black</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="logStyle">
        <item name="android:background">#66AABBBB</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="tabwidgetStyle">
        <item name="android:background">#336</item>
    </style>

    <style name="devlistStyle">
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="devaddrStyle">
        <item name="android:textColor">#eee</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="rssiStyle">
        <item name="android:textColor">#ff0</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="listItemStyle">
        <item name="android:background">@drawable/list_item_normal</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="nameStyle">
        <item name="android:textColor">#3cf</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="dirStyle">
        <item name="android:textColor">#ff3</item>
				<item name="android:textSize">20dp</item>
				<item name="android:layout_margin">10dp</item>
				<item name="android:gravity">center_horizontal</item>
    </style>
    
    <style name="dataStyle">
        <item name="android:background">#333</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#4f4</item>
        <item name="android:textColorHint">#fff</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="dataStyle1">
        <item name="android:textColor">#3f3</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="dataStyle2">
        <item name="android:textColor">#f33</item>
        <item name="android:textSize">16dp</item>
    </style>

		<style name="nameStyle.inactive">
        <item name="android:textColor">#ccc</item>
    </style>

    <style name="nameStyleSelected">
        <item name="android:textColor">#4f4</item>
    </style>

    <style name="uuidStyle">
        <item name="android:textColor">#cde</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="infoStyle">
        <item name="android:textColor">#3f3</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="statusStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="statusStyleSmall">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="statusStyle.Success" parent="statusStyle">
        <item name="android:textColor">#33CCFF</item>
    </style>

    <style name="statusStyle.Busy" parent="statusStyle">
        <item name="android:textColor">#EEEEEE</item>
    </style>

    <style name="statusStyle.Failure" parent="statusStyle">
        <item name="android:textColor">#FF0000</item>
    </style>

    <style name="statusStyle.Disabled" parent="statusStyle">
        <item name="android:textColor">#999999</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="tbStartStyle">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="checkboxStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="checkboxStyle.Disabled" parent="checkboxStyle"></style>

</resources>
